            </div>

            <!-- Articles View (Hidden by default) -->
            <div id="articles-view" class="content-view hidden animate-fade-in">
                <!-- Content will be loaded via JavaScript -->
            </div>

            <!-- Moderation View (Hidden by default) -->
            <div id="moderation-view" class="content-view hidden animate-fade-in">
                <!-- Content will be loaded via JavaScript -->
            </div>

            <!-- Users View (Hidden by default) -->
            <div id="users-view" class="content-view hidden animate-fade-in">
                <!-- Content will be loaded via JavaScript -->
            </div>

            <!-- Analytics View (Hidden by default) -->
            <div id="analytics-view" class="content-view hidden animate-fade-in">
                <!-- Content will be loaded via JavaScript -->
            </div>

            <!-- Settings View (Hidden by default) -->
            <div id="settings-view" class="content-view hidden animate-fade-in">
                <!-- Content will be loaded via JavaScript -->
            </div>
        </div>
    </main>

    <!-- Toast Notification -->
    <div id="toast" class="fixed bottom-5 right-5 bg-white border-l-4 border-green-500 text-slate-800 px-4 md:px-6 py-3 md:py-4 rounded shadow-2xl transform translate-y-24 transition-transform duration-300 z-50 flex items-center gap-3 max-w-[calc(100vw-2rem)]">
        <i data-lucide="check-circle" class="text-green-500 w-5 h-5 flex-shrink-0"></i>
        <div class="min-w-0">
            <h4 class="font-bold text-sm truncate">Berhasil!</h4>
            <p class="text-xs text-slate-600 truncate">Tindakan berhasil dijalankan.</p>
        </div>
    </div>

    <!-- Floating Action Button for Mobile -->
    <button id="mobile-fab" class="fixed bottom-6 right-6 md:hidden w-14 h-14 bg-red-600 text-white rounded-full shadow-lg flex items-center justify-center z-40 btn-touch hover:bg-red-700 transition-colors">
        <i data-lucide="plus" class="w-6 h-6"></i>
    </button>

    <script>
        // Initialize Lucide Icons
        lucide.createIcons();
        
        // Mobile navigation variables
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const sidebar = document.getElementById('sidebar');
        const sidebarClose = document.getElementById('sidebar-close');
        const mobileOverlay = document.getElementById('mobile-overlay');
        const mobileSearchBtn = document.getElementById('mobile-search-btn');
        const mobileSearchBar = document.getElementById('mobile-search-bar');
        const closeSearchBtn = document.getElementById('close-search-btn');
        const mobileFab = document.getElementById('mobile-fab');
        
        // Sample data
        const sampleArticles = [
            { id: 1, title: "Pembangunan MRT Fase 3 Dimulai", category: "Nasional", author: "Budi Santoso", date: "26 Okt 2023", status: "Terbit", views: "12.5k" },
            { id: 2, title: "Timnas Indonesia Masuk Final Piala Asia", category: "Olahraga", author: "Andi Wijaya", date: "25 Okt 2023", status: "Terbit", views: "45.2k" },
            { id: 3, title: "Resesi Ekonomi Global 2024", category: "Ekonomi", author: "Siti Rahma", date: "24 Okt 2023", status: "Draft", views: "-" },
            { id: 4, title: "Review iPhone 15 Pro Max", category: "Teknologi", author: "Dedi Corbuzier", date: "24 Okt 2023", status: "Terbit", views: "8.9k" },
            { id: 5, title: "Resep Rendang Daging Sapi Empuk", category: "Gaya Hidup", author: "Rina Masak", date: "23 Okt 2023", status: "Arsip", views: "5.1k" },
        ];
        
        // Function to show/hide sidebar on mobile
        function toggleSidebar(show) {
            if (window.innerWidth < 768) {
                if (show) {
                    sidebar.classList.add('active');
                    mobileOverlay.classList.remove('hidden');
                    document.body.style.overflow = 'hidden';
                } else {
                    sidebar.classList.remove('active');
                    mobileOverlay.classList.add('hidden');
                    document.body.style.overflow = '';
                }
            }
        }
        
        // Sidebar toggle events
        mobileMenuBtn.addEventListener('click', () => toggleSidebar(true));
        sidebarClose.addEventListener('click', () => toggleSidebar(false));
        mobileOverlay.addEventListener('click', () => toggleSidebar(false));
        
        // Mobile search toggle
        mobileSearchBtn.addEventListener('click', () => {
            mobileSearchBar.classList.toggle('hidden');
        });
        
        closeSearchBtn.addEventListener('click', () => {
            mobileSearchBar.classList.add('hidden');
        });
        
        // Mobile FAB action
        mobileFab.addEventListener('click', () => {
            // Default action: create new article
            showToast('Membuka form artikel baru');
            // In a real app, you would navigate to article creation
        });
        
        // Function to render articles table for desktop
        function renderDesktopTable() {
            const tbody = document.querySelector('#dashboard-view .desktop-table tbody');
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            sampleArticles.forEach(article => {
                const statusClass = {
                    'Terbit': 'status-published',
                    'Draft': 'status-draft',
                    'Arsip': 'status-archive'
                }[article.status] || 'status-published';
                
                const row = document.createElement('tr');
                row.className = 'hover:bg-slate-50 transition-colors';
                row.innerHTML = `
                    <td class="px-4 md:px-6 py-3 md:py-4">
                        <p class="font-semibold text-slate-800 text-sm md:text-base truncate max-w-[200px]">${article.title}</p>
                        <p class="text-xs text-slate-500 mt-1">${article.views} tayangan</p>
                    </td>
                    <td class="px-4 md:px-6 py-3 md:py-4">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-50 text-red-700 border border-red-100">${article.category}</span>
                    </td>
                    <td class="px-4 md:px-6 py-3 md:py-4 text-sm text-slate-600">${article.author}</td>
                    <td class="px-4 md:px-6 py-3 md:py-4 text-sm text-slate-500">${article.date}</td>
                    <td class="px-4 md:px-6 py-3 md:py-4">
                        <span class="status-badge ${statusClass}">${article.status}</span>
                    </td>
                    <td class="px-4 md:px-6 py-3 md:py-4 text-center">
                        <div class="flex justify-center gap-1 md:gap-2">
                            <button class="p-1 md:p-1.5 hover:bg-slate-100 text-slate-600 rounded btn-touch">
                                <i data-lucide="edit" class="w-3 h-3 md:w-4 md:h-4"></i>
                            </button>
                            <button class="p-1 md:p-1.5 hover:bg-red-50 text-red-600 rounded btn-touch">
                                <i data-lucide="trash-2" class="w-3 h-3 md:w-4 md:h-4"></i>
                            </button>
                        </div>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }
        
        // Function to render articles as cards for mobile
        function renderMobileCards() {
            const container = document.querySelector('#dashboard-view .table-mobile-card');
            if (!container) return;
            
            container.innerHTML = '';
            
            sampleArticles.forEach(article => {
                const statusClass = {
                    'Terbit': 'status-published',
                    'Draft': 'status-draft',
                    'Arsip': 'status-archive'
                }[article.status] || 'status-published';
                
                const card = document.createElement('div');
                card.className = 'table-card-mobile';
                card.innerHTML = `
                    <div class="table-card-header">
                        <div class="flex justify-between items-start">
                            <h4 class="font-semibold text-slate-800 text-sm truncate flex-1 pr-2">${article.title}</h4>
                            <span class="status-badge ${statusClass} flex-shrink-0">${article.status}</span>
                        </div>
                    </div>
                    <div class="table-card-body">
                        <div class="table-card-row">
                            <span class="table-card-label">Kategori</span>
                            <span class="table-card-value">${article.category}</span>
                        </div>
                        <div class="table-card-row">
                            <span class="table-card-label">Penulis</span>
                            <span class="table-card-value">${article.author}</span>
                        </div>
                        <div class="table-card-row">
                            <span class="table-card-label">Tanggal</span>
                            <span class="table-card-value">${article.date}</span>
                        </div>
                        <div class="table-card-row">
                            <span class="table-card-label">Tayangan</span>
                            <span class="table-card-value">${article.views}</span>
                        </div>
                        <div class="pt-3 flex justify-between">
                            <button class="flex-1 mr-2 bg-slate-100 text-slate-700 py-2 rounded-lg text-sm font-medium flex items-center justify-center gap-1 btn-touch">
                                <i data-lucide="edit" class="w-3 h-3"></i> Edit
                            </button>
                            <button class="flex-1 ml-2 bg-red-50 text-red-600 py-2 rounded-lg text-sm font-medium flex items-center justify-center gap-1 btn-touch">
                                <i data-lucide="trash-2" class="w-3 h-3"></i> Hapus
                            </button>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        }
        
        // Sidebar navigation
        const sidebarMenuItems = document.querySelectorAll('.sidebar-menu-item');
        const contentViews = document.querySelectorAll('.content-view');
        
        sidebarMenuItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                
                // Remove active class from all items
                sidebarMenuItems.forEach(i => i.classList.remove('active'));
                
                // Add active class to clicked item
                item.classList.add('active');
                
                // Hide all content views
                contentViews.forEach(view => view.classList.add('hidden'));
                
                // Show the selected content view
                const tabId = item.getAttribute('data-tab');
                const targetView = document.getElementById(`${tabId}-view`);
                if (targetView) {
                    targetView.classList.remove('hidden');
                    targetView.classList.add('animate-fade-in');
                    
                    // Update FAB icon based on tab
                    const fabIcon = mobileFab.querySelector('i');
                    if (tabId === 'articles') {
                        fabIcon.setAttribute('data-lucide', 'plus');
                        mobileFab.setAttribute('title', 'Buat Artikel Baru');
                    } else if (tabId === 'moderation') {
                        fabIcon.setAttribute('data-lucide', 'check-circle');
                        mobileFab.setAttribute('title', 'Setujui Artikel');
                    } else {
                        fabIcon.setAttribute('data-lucide', 'plus');
                        mobileFab.setAttribute('title', 'Tambah Baru');
                    }
                    lucide.createIcons();
                }
                
                // Close sidebar on mobile after selection
                toggleSidebar(false);
                
                // Scroll to top of content
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        });
        
        // Logout button
        document.getElementById('logout-btn').addEventListener('click', () => {
            if (confirm('Apakah Anda yakin ingin keluar?')) {
                showToast('Berhasil logout!');
                // In a real app, you would redirect to login page
                // window.location.href = '/login';
            }
        });
        
        // Toast notification function
        function showToast(message = 'Tindakan berhasil!') {
            const toast = document.getElementById('toast');
            const toastText = toast.querySelector('p');
            toastText.textContent = message;
            
            // Show toast
            toast.classList.remove('translate-y-24');
            
            // Hide toast after 3 seconds
            setTimeout(() => {
                toast.classList.add('translate-y-24');
            }, 3000);
        }
        
        // Handle window resize
        let resizeTimer;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(() => {
                if (window.innerWidth >= 768) {
                    // On desktop, ensure sidebar is visible and overlay hidden
                    sidebar.classList.remove('active');
                    mobileOverlay.classList.add('hidden');
                    document.body.style.overflow = '';
                    mobileSearchBar.classList.add('hidden');
                }
            }, 250);
        });
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            // Render articles for both desktop and mobile
            renderDesktopTable();
            renderMobileCards();
            
            // Set initial active state
            document.querySelector('.sidebar-menu-item[data-tab="dashboard"]').classList.add('active');
            
            // Add click events to action buttons
            document.addEventListener('click', (e) => {
                // Edit buttons
                if (e.target.closest('button')?.querySelector('i[data-lucide="edit"]')) {
                    showToast('Membuka editor artikel');
                }
                
                // Delete buttons
                if (e.target.closest('button')?.querySelector('i[data-lucide="trash-2"]')) {
                    if (confirm('Apakah Anda yakin ingin menghapus artikel ini?')) {
                        showToast('Artikel berhasil dihapus');
                    }
                }
                
                // Quick action buttons
                if (e.target.closest('.bg-red-600') && e.target.closest('.bg-red-600').textContent.includes('Buat Artikel')) {
                    showToast('Membuka form artikel baru');
                }
                
                if (e.target.closest('.bg-white.border') && e.target.closest('.bg-white.border').textContent.includes('Tinjau Sekarang')) {
                    // Navigate to moderation tab
                    document.querySelector('.sidebar-menu-item[data-tab="moderation"]').click();
                }
                
                if (e.target.closest('.bg-amber-500') && e.target.closest('.bg-amber-500').textContent.includes('Laporan')) {
                    // Navigate to analytics tab
                    document.querySelector('.sidebar-menu-item[data-tab="analytics"]').click();
                }
            });
            
            // Handle escape key to close sidebar
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    toggleSidebar(false);
                    mobileSearchBar.classList.add('hidden');
                }
            });
            
            // Touch gesture for swipe to close sidebar (optional enhancement)
            let touchStartX = 0;
            let touchEndX = 0;
            
            document.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
            });
            
            document.addEventListener('touchend', (e) => {
                touchEndX = e.changedTouches[0].screenX;
                // If swiped left from right edge, close sidebar
                if (touchStartX - touchEndX > 100 && window.innerWidth < 768) {
                    toggleSidebar(false);
                }
            });
        });
    </script>
</body>
</html>
